# Telegram Bot Configuration
TELEGRAM_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
WEBHOOK_URL=https://your-domain.com
WEBHOOK_SECRET=your-secret-token-here
TELEGRAM_CHANNEL=@repackit_updates  # Optional: Telegram channel handle for updates (leave empty to disable)

# Server Ports
BOT_PORT=8443
HEALTH_PORT=8444
HEALTH_BIND_ADDRESS=0.0.0.0  # Use 0.0.0.0 for Docker/all interfaces, 127.0.0.1 for localhost only

# Database
DATABASE_PATH=./data/repackit.db

# Scheduler (24-hour format, e.g., 9 = 09:00)
SCRAPER_HOUR=9
CHECKER_HOUR=10
CLEANUP_HOUR=2

# Admin
ADMIN_USER_ID=123456789

# Amazon Affiliate
AMAZON_AFFILIATE_TAG=yourtag-21

# Logging
LOG_LEVEL=INFO

# Product Limits & Referral System
DEFAULT_MAX_PRODUCTS=21       # Max assoluto per tutti gli utenti (cap)
INITIAL_MAX_PRODUCTS=3        # Prodotti iniziali per nuovi utenti
PRODUCTS_PER_REFERRAL=3       # Bonus prodotti per l'invitante quando l'invitato aggiunge primo prodotto
INVITED_USER_BONUS=3          # Bonus prodotti extra per l'invitato al momento della registrazione

# Telegram Rate Limiting
TELEGRAM_MESSAGES_PER_SECOND=30  # Telegram API hard limit (30 messages/second)
BATCH_SIZE=10                    # Batch size for notifications and broadcasts
DELAY_BETWEEN_BATCHES=1.0        # Delay in seconds between batches
